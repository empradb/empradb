# EmpraDB Environment Variables

# API Configuration
PORT=3001
NODE_ENV=development

# Web App Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Data Paths
DATA_PATH=./data
INDEXES_PATH=./data/indexes

# Search Configuration
SEARCH_MAX_RESULTS=100
SEARCH_MIN_SCORE=0.1

# Study Path Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.7
MIN_DAILY_STUDY_HOURS=0.5
MAX_DAILY_STUDY_HOURS=4

# Graph Configuration
MAX_GRAPH_DEPTH=10
ENABLE_CYCLE_DETECTION=true

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ENABLE_CORS=true
